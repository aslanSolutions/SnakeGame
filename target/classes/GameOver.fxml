<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<AnchorPane onKeyPressed="#handleOnKeyPressed" prefHeight="750.0" prefWidth="700.0" style="-fx-background-color: #000000;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="group13.frontend.GameOverController">

   <Rectangle arcHeight="50.0" arcWidth="50.0" fill="CORNSILK" height="300.0" layoutX="151.0" layoutY="201.0" stroke="BLACK" strokeLineCap="ROUND" strokeType="INSIDE" width="400.0" />
   <Label layoutX="264.0" layoutY="224.0" text="GAME OVER!" textAlignment="CENTER">
      <font>
         <Font name="Impact" size="37.0" />
      </font>
   </Label>
   <Label fx:id="score" layoutX="300.0" layoutY="277.0" text="SCORE: " textAlignment="CENTER">
      <font>
         <Font name="Impact" size="25.0" />
      </font>
   </Label>
   <Label fx:id="enterName" layoutX="196.0" layoutY="318.0" text="ENTER YOUR NAME TO SAVE YOUR SCORE:" textAlignment="CENTER">
      <font>
         <Font name="Impact" size="20.0" />
      </font>
   </Label>
   <Button cacheShape="false" centerShape="false" layoutX="188.0" layoutY="432.0" mnemonicParsing="false" onAction="#handleMenuButtonPress" style="-fx-background-color: WHITE; -fx-border-color: BLACK; -fx-border-radius: 3;" text="Back to Menu">
      <font>
         <Font name="Impact" size="20.0" />
      </font></Button>
   <TextField fx:id="playerNameField" alignment="CENTER" focusTraversable="false" layoutX="239.0" layoutY="356.0" onAction="#onTextFieldEnter" style="-fx-background-color: #eee; -fx-border-color: #000000; -fx-border-width: 3;" text="Last Player">
      <font>
         <Font name="Impact" size="20.0" />
      </font>
      <cursor>
         <Cursor fx:constant="TEXT" />
      </cursor>
   </TextField>
   <Button fx:id="replay" cacheShape="false" centerShape="false" layoutX="398.0" layoutY="432.0" mnemonicParsing="false" onAction="#handleReplayButtonPress" style="-fx-background-color: WHITE; -fx-border-color: BLACK; -fx-border-radius: 3;" text="PLAY AGAIN">
      <font>
         <Font name="Impact" size="20.0" />
      </font>
   </Button>

</AnchorPane>
