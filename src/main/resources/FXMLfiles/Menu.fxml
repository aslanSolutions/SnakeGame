<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="700.0" prefWidth="700.0" stylesheets="@../MenuStylesheet.css"
            xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="group13.frontend.MenuController">
   <Label alignment="TOP_CENTER" layoutX="293.0" layoutY="141.0" prefHeight="106.0" prefWidth="298.0" text="Game"
          textFill="WHITE">
      <font>
         <Font name="System Bold" size="81.0"/>
      </font>
   </Label>
   <ImageView fitHeight="312.0" fitWidth="584.0" layoutX="3.0" layoutY="-12.0">
      <Image url="@../Images/snake.png"/>
   </ImageView>
   <Button layoutX="276.0" layoutY="500.0" mnemonicParsing="false" onAction="#leaderBoard" prefHeight="41.0"
           prefWidth="147.0" text="Leader board">
      <font>
         <Font name="Aldhabi" size="17.0"/>
      </font>
      <cursor>
         <Cursor fx:constant="HAND"/>
      </cursor>
   </Button>
   <Button layoutX="276.0" layoutY="575.0" mnemonicParsing="false" onAction="#exitGame" prefHeight="44.0"
           prefWidth="147.0" text="Exit Game">
      <font>
         <Font name="Aldhabi" size="19.0"/>
      </font>
      <cursor>
         <Cursor fx:constant="HAND"/>
      </cursor>
   </Button>
   <Button contentDisplay="CENTER" layoutX="276.0" layoutY="422.0" mnemonicParsing="false" onAction="#howToPlay"
           prefHeight="43.0" prefWidth="147.0" text="How to play">
      <font>
         <Font name="Aldhabi" size="18.0"/>
      </font>
      <cursor>
         <Cursor fx:constant="HAND"/>
      </cursor>
   </Button>
   <Label alignment="TOP_CENTER" layoutX="8.0" layoutY="35.0" prefHeight="128.0" prefWidth="388.0" text="Snak e">
      <font>
         <Font size="88.0"/>
      </font>
   </Label>
   <ImageView fitHeight="34.0" fitWidth="38.0" layoutX="450.0" layoutY="71.0">
      <Image url="@../Images/mouseP.png"/>
   </ImageView>
   <Button layoutX="634.0" layoutY="634.0" onAction="#music" stylesheets="@../MusicButtonsStylesheet.css">
      <graphic>
         <ImageView fx:id="musicImageView" fitHeight="45.0" fitWidth="47.0">
            <Image url="@../Images/mutedMusic.png"/>
         </ImageView>
      </graphic>
   </Button>
   <Button layoutX="576.0" layoutY="634.0" onAction="#sound" stylesheets="@../MusicButtonsStylesheet.css">
      <graphic>
         <ImageView fx:id="soundImageView" fitHeight="45.0" fitWidth="47.0">
            <Image url="@../Images/MutedSound.png"/>
         </ImageView>
      </graphic>
   </Button>
   <Button contentDisplay="CENTER" layoutX="276.0" layoutY="346.0" mnemonicParsing="false" onAction="#startGame"
           prefHeight="43.0" prefWidth="147.0" text="New Game">
      <font>
         <Font name="Aldhabi" size="18.0"/>
      </font>
      <cursor>
         <Cursor fx:constant="HAND"/>
      </cursor>
   </Button>

</AnchorPane>
